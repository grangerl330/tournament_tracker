<%= form_for @match do |f| %>
  <p>
    <%= f.label "Date" %>
    <%= f.date_field :date %>
  </p>
  <p>
    <%= f.label "Time" %>
    <%= f.time_field :time %>
  </p>
  <p>
    <%= f.label "Tournament" %>
    <%= f.collection_select(:tournament_id, Tournament.all, :id, :title, {selected: @tournament.id}) %>
  </p>
  <p>
    <%= f.label "Round" %>
    <%= f.select :round, @tournament.round_options %>
  </p>
  <p>
    <%= f.label "Score" %>
    <%= f.text_field :score %>
  </p>
  <p>
    <%= f.label "Check If You Won" %>
    <%= f.check_box :won %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
