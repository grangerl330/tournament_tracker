<%= form_for @user do |f| %>
  <p>
    <%= f.label "First Name:" %>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label "Last Name:" %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <% if !@user.uid %>
      <%= f.label :email %>
      <%= f.text_field :email %>
    <% else %>
      Email: <%= @user.email %> - Set Through Facebook
    <% end %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </p>
  <p>
    <%= f.label "Password Confirmation" %>
    <%= f.password_field :password_confirmation, required: true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end  %>
