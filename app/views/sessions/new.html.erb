<h1>Login</h1>

<%= form_tag(login_path) do %>
  <%= label_tag "Email:"%>
  <%= text_field_tag :email %><br>

  <br><%= label_tag "Password:" %>
  <%= password_field_tag :password %><br>

  <br><%= submit_tag "Login" %>
<% end %>

<p>or</p>

<%= link_to('Log in with Facebook!', '/auth/facebook') %>

<p>or</p>

<p><%= link_to "Sign Up", new_user_path %></p>
