<%= form_for @tournament do |f| %>
  <p>
    <%= f.label "Title" %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Start Date" %>
    <%= f.date_field :start_date  %>
  </p>
  <p>
    <%= f.label "End Date" %>
    <%= f.date_field :end_date %>
  </p>
  <p>
    <%= f.label "Location" %>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label "Draw Size" %>
    <%= f.select :draw_size, @tournament.draw_size_options %>
  </p>
  <p>
    <%= f.label "Points Won" %>
    <%= f.number_field :points %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
