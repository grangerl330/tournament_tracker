<h1 class="inline"><%= @tournament.title %></h1> <%= link_to "Edit", edit_tournament_path(@tournament) %> <%= link_to "Delete", tournament_path(@tournament), method: :delete %>

<p><b>Start Date:</b> <%= @tournament.start_date.strftime("%m/%d/%Y") if @tournament.start_date %></p>
<p><b>End Date:</b> <%= @tournament.end_date.strftime("%m/%d/%Y") if @tournament.end_date %></p>
<p><b>Location:</b> <%= @tournament.location %></p>
<p><b>Draw Size:</b> <%= @tournament.draw_size %></p>
<p><b>Points Won:</b> <%= @tournament.points %></p>
<p><b>Result:</b> <%= @tournament.result %></p>


<p><a href="" id="show-matches-link" style="display:none"></a></p>

<div id="all-match-display" style="">
  <h2>Matches</h2>
  <% @tournament.matches.each_with_index do |match, index| %>
    <% if match.round %>
      <p><%= link_to "#{match.round_num_or_name} vs #{match.opponent.full_name}", match_path(match), class:"match-link" %> - <%= match.result %></p>
    <% end %>
  <% end %>

  <% content_for :footer do %>
    <br>
    <br>
  <% end %>
</div>
<p><%= link_to "Add Match", new_match_path(:tournament_id => @tournament.id), id:"add-match" %></p>

<div id="single-match-display">
</div>
<div id="new-match-form" style="display:none">
  <h2 style="margin-bottom: -5px">Add A New Match</h2>
  <p><%= render 'matches/opponent_form' %></p>
</div>
